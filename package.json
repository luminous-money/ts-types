{
  "name": "@luminous-money/types",
  "version": "1.0.0-beta16",
  "description": "Types for the Luminous Money ecosystem",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -Rf ./dist; npx -p typescript tsc",
    "docgen": "npx typedoc src/index.ts --sort source-order",
    "prepublishOnly": "rm -Rf ./dist; npx tsc && npm run docgen"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:luminous-money/ts-types"
  },
  "keywords": [
    "finance",
    "budgeting",
    "goals"
  ],
  "author": "Kael Shipman",
  "contributors": "Various Contributors (https://github.com/luminous-money/ts-types/graphs/contributors)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luminous-money/ts-types/issues"
  },
  "homepage": "https://github.com/luminous-money/ts-types#readme",
  "dependencies": {
    "@wymp/types": "^0.2.0-rc3"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit-tests",
        "testEnvironment": "node",
        "verbose": true,
        "testMatch": [
          "<rootDir>/tests/**/*.spec.ts",
          "!**/e2e.spec.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
          "ts-jest": {
            "tsconfig": "tsconfig.test.json"
          }
        }
      },
      {
        "displayName": "e2e-tests",
        "testEnvironment": "node",
        "verbose": true,
        "maxWorkers": 1,
        "testMatch": [
          "<rootDir>/tests/e2e.spec.ts"
        ],
        "transform": {
          "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
          "ts-jest": {
            "tsconfig": "tsconfig.test.json"
          }
        }
      }
    ]
  }
}
